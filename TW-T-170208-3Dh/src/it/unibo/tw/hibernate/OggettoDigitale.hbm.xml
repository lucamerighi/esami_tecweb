<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="it.unibo.tw.hibernate.OggettoDigitale" table="oggettiDig">
    <id name="idOgg" column="idOgg"/>
     <property name="codOgg" column="codOgg" not-null="true" unique="true"/>
    <property name="nome" column="Nome"/>
    <property name="formato" column="Formato"/>
    <property name="dataDigit" column="dataDigit"/>
    
    <many-to-one name="mat" class="it.unibo.tw.hibernate.MaterialeFisico" fetch="select">
    	<column name="idMat" not-null="true"></column>
    </many-to-one>
  
    
  </class>
</hibernate-mapping>