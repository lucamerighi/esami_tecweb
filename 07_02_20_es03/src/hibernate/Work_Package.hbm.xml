<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="hibernate.Work_Package" table="wp">
    <id name="nomeWp" column="nomeWp"/>
    <property name="Titolo" column="titolo"/>
    <property name="Descrizione" column="descrizione"/>
   
    
    <many-to-one name="progetto" class="hibernate.Progetto" fetch="select">
    	<column name="codiceProgetto" not-null="true"/>
    </many-to-one>
  </class>
  
</hibernate-mapping>